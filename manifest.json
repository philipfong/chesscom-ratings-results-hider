{
  "manifest_version": 3,
  "name": "Chess.com Rating and Results Hider",
  "version": "1.1",
  "description": "Hide ratings, results, and stats on Chess.com",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
